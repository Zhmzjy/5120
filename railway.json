{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd melbourne-parking-website/frontend && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd melbourne-parking-website/backend && python run.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

